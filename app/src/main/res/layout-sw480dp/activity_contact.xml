<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="epitech.eip.slidare.ContactActivity">

    <LinearLayout
        android:id="@+id/switch_agenda"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/switch_border"
        android:layout_gravity="top | center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/contact_on"
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:gravity="center"
            android:text="Contact"
            android:textSize="20dp"
            android:fontFamily="Roboto"
            android:background="@drawable/contact_left"
            android:textColor="@color/blue_back"/>

        <TextView
            android:id="@+id/group_off"
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:gravity="center"
            android:text="Group"
            android:textSize="20dp"
            android:fontFamily="Roboto"
            android:background="@drawable/contact_right"
            android:textColor="@color/whiteColor"/>

    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_title"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Contacts"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="Roboto"/>

        <ImageView
            android:id="@+id/ico_addContact"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:layout_marginLeft="500dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_plus_blue" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/search_background"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="110dp"
            android:padding="5dp"
            android:background="@color/grey_light">

            <SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:queryHint="Search"
                android:background="@drawable/border"
                android:iconifiedByDefault="false">
                <requestFocus />
            </SearchView>

        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="185dp"
            android:choiceMode="singleChoice"
            android:listSelector="@color/grey_snow"
            android:focusable="true"/>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/bottom_bar">

        <ImageView
            android:id="@+id/ico_home"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ico_home"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/ico_group"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ico_home"
            android:src="@drawable/ico_contact"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="-30dp"/>

        <ImageView
            android:id="@+id/ico_profil"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:layout_below="@+id/ico_group"
            android:src="@drawable/new_user"
            android:layout_marginLeft="415dp"
            android:layout_marginTop="-40dp"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>