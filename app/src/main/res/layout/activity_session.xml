<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="project.eip.epitech.slidare.SessionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:background="@drawable/fond"
        android:id="@+id/main_background">

        <TextView
            android:id="@+id/profile"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Profile ───────────────────────"
            android:textSize="18dp"
            android:fontFamily="Roboto"
            android:textColor="@color/blue_dark" />

        <LinearLayout
            android:id="@+id/ll_pseudo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/profile"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ico_user"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ico_user"
                android:layout_below="@+id/profile"
                android:padding="10dp"
                android:layout_marginLeft="-2dp"/>

            <TextView
                android:id="@+id/pseudo"
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:text="Pseudo"
                android:textSize="20dp"
                android:fontFamily="Roboto"
                android:textColor="@color/whiteColor"
                android:layout_marginTop="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_pseudo" >

            <ImageView
                android:id="@+id/ico_mail"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ico_mail"
                android:layout_below="@+id/profile"
                android:padding="12dp"
                android:layout_marginLeft="-4dp"/>

            <TextView
                android:id="@+id/email"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:text="Email Address"
                android:textSize="20dp"
                android:fontFamily="Roboto"
                android:textColor="@color/whiteColor"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/ll_mail" >

            <ImageView
                android:id="@+id/ico_pen"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ico_pen"
                android:layout_below="@+id/profile"
                android:padding="14dp"
                android:layout_marginLeft="-6dp"/>

            <TextView
                android:id="@+id/editProfile"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:text="Edit profile"
                android:textSize="20dp"
                android:fontFamily="Roboto"
                android:textColor="@color/whiteColor"
                android:clickable="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="-2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/user"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:src="@drawable/new_user"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profile"
            android:padding="10dp" />

        <TextView
            android:id="@+id/contacts"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Contacts ─────────────────────"
            android:textSize="18dp"
            android:fontFamily="Roboto"
            android:textColor="@color/blue_dark"
            android:layout_below="@+id/ll_edit"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/ll_contacts"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/contacts"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/ico_list"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ico_info"
                android:layout_below="@+id/contacts"
                android:padding="10dp"
                android:layout_marginRight="20dp" />

            <ImageView
                android:id="@+id/ico_favorite"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ico_heart"
                android:layout_below="@+id/contacts"
                android:padding="10dp"
                android:layout_marginRight="20dp" />

            <ImageView
                android:id="@+id/ico_add"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ico_addcontact"
                android:layout_below="@+id/contacts"
                android:padding="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/group"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Groups ───────────────────────"
            android:textSize="18dp"
            android:fontFamily="Roboto"
            android:textColor="@color/blue_dark"
            android:layout_below="@+id/ll_contacts"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/ll_groups"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/group"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/ico_group"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ico_contact"
                android:layout_below="@+id/contacts"
                android:padding="10dp"
                android:layout_marginRight="20dp" />

            <ImageView
                android:id="@+id/ico_star"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ico_star"
                android:layout_below="@+id/contacts"
                android:padding="10dp"
                android:layout_marginRight="20dp" />

            <ImageView
                android:id="@+id/ico_newgroup"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ico_plus"
                android:layout_below="@+id/contacts"
                android:padding="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Settings ──────────────────────"
            android:textSize="18dp"
            android:fontFamily="Roboto"
            android:textColor="@color/blue_dark"
            android:layout_below="@+id/ll_groups"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/notificationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings"
            android:text="Notifications"
            android:textSize="20dp"
            android:fontFamily="Roboto"
            android:textColor="@color/whiteColor"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/alertStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notificationStatus"
            android:text="Alerts"
            android:textSize="20dp"
            android:fontFamily="Roboto"
            android:textColor="@color/whiteColor"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <Switch
            android:id="@+id/alertSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notificationSwitch"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/logout"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_below="@+id/alertSwitch"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:text="Log out"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:background="@color/blue_dark"
                android:textColor="@drawable/login_button_text_color" />

        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
