<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="epitech.eip.slidare.ContactActivity">

    <LinearLayout
        android:id="@+id/switch_agenda"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/switch_border"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/contact_on"
            android:layout_height="30dp"
            android:layout_width="100dp"
            android:gravity="center"
            android:text="Contact"
            android:textSize="18dp"
            android:fontFamily="Roboto"
            android:background="@drawable/contact_left"
            android:textColor="@color/blue_back"/>

        <TextView
            android:id="@+id/group_off"
            android:layout_height="30dp"
            android:layout_width="100dp"
            android:gravity="center"
            android:text="Group"
            android:textSize="18dp"
            android:fontFamily="Roboto"
            android:background="@drawable/contact_right"
            android:textColor="@color/whiteColor"/>

    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:id="@+id/top_bar">

        <TextView
            android:id="@+id/contact_title"
            android:layout_height="match_parent"
            android:layout_width="350dp"
            android:gravity="center"
            android:text="Contact list"
            android:textSize="20dp"
            android:fontFamily="Roboto"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ico_addContact"
            android:layout_height="match_parent"
            android:layout_width="350dp"
            android:gravity="center"
            android:text="Add"
            android:textSize="20dp"
            android:fontFamily="Roboto"
            android:layout_marginLeft="300dp"
            android:textColor="@color/blue_back"/>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@drawable/bottom_bar"
        android:layout_marginTop="560dp"
        android:id="@+id/bottom_bar">

        <ImageView
            android:id="@+id/ico_home"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/messagewhite"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/ico_group"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ico_home"
            android:src="@drawable/contactwhite"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-45dp"/>

        <ImageView
            android:id="@+id/ico_profil"
            android:layout_height="45dp"
            android:layout_width="45dp"
            android:layout_below="@+id/ico_group"
            android:src="@drawable/new_user"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="-50dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/search_background"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="110dp"
            android:background="@color/grey_light"
            android:orientation="vertical"
            android:padding="5dp">

            <SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:iconifiedByDefault="false"
                android:queryHint="Search">

                <requestFocus />
            </SearchView>

        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginTop="175dp"
            android:choiceMode="singleChoice"
            android:focusable="true"
            android:listSelector="@color/grey_snow" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>